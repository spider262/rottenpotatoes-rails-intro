-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  %input{:type=>"hidden", :value=>params[:sortby], :name=>:sortby}
  Include:
  - @all_ratings.each do |rating|
    = rating.rating
    = check_box_tag "ratings[#{rating.rating}]", 1, @ratings_set.include?(rating.rating)
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class  => @title, :id => "title_header"}=link_to('Movie Title',params.merge(:sortby => "title"))
      %th Rating
      %th{:class => @date, :id => "release_date_header"}=link_to('Release Date',params.merge(:sortby => "date"))
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
